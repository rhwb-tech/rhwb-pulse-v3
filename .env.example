# JWT Authentication Configuration
# Copy this file to .env.local for local development
# Set these variables in your Vercel dashboard for production

# JWT Secret Key (must match your Wix backend secret)
# Generate with: openssl rand -base64 32
REACT_APP_JWT_SECRET=your-secret-key-here

# Local Storage Key for JWT Token
# Default: rhwb_pulse_auth_token
REACT_APP_TOKEN_STORAGE_KEY=rhwb_pulse_auth_token

# Token Expiry Buffer (in seconds)
# Adds buffer time before token expiration to prevent edge cases
# Default: 300 seconds (5 minutes)
REACT_APP_TOKEN_EXPIRY_BUFFER=300

# Optional: Supabase Configuration
REACT_APP_SUPABASE_URL=your-supabase-url
REACT_APP_SUPABASE_ANON_KEY=your-supabase-anon-key