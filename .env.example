# JWT Authentication Configuration
# Copy this file to .env.local for local development
# Set these variables in your Vercel dashboard for production

# JWT Secret Key (must match your Wix backend secret)
# Generate with: openssl rand -base64 32
REACT_APP_JWT_SECRET=your-secret-key-here

# Local Storage Key for JWT Token
# Default: rhwb_pulse_auth_token
REACT_APP_TOKEN_STORAGE_KEY=rhwb_pulse_auth_token

# Token Expiry Buffer (in seconds)
# Adds buffer time before token expiration to prevent edge cases
# Default: 300 seconds (5 minutes)
REACT_APP_TOKEN_EXPIRY_BUFFER=300

# Skip JWT Signature Verification (for production deployment)
# Set to 'true' to skip signature verification on Vercel/production
# Default: false (signature verification enabled)
REACT_APP_SKIP_SIGNATURE_VERIFICATION=true

# Supabase Configuration (REQUIRED)
REACT_APP_SUPABASE_URL=your-supabase-url
REACT_APP_SUPABASE_ANON_KEY=your-supabase-anon-key

# Testing Configuration (Development Only)
# Generate secure token with: openssl rand -hex 32
# Only works when NODE_ENV !== 'production'
# Required for using ?email=xxx&test_token=yyy URL parameter override
REACT_APP_TEST_TOKEN=your-secret-test-token-here

# Gemini AI Configuration (for chatbot)
# Get API key from: https://makersuite.google.com/app/apikey
REACT_APP_GEMINI_API_KEY=your-gemini-api-key-here
REACT_APP_GEMINI_MODEL=gemini-2.0-flash-exp

# Gemini FileSearchStore (for knowledge base RAG)
# Get this from the sync script logs after running the sync
# Format: projects/YOUR_PROJECT_NUMBER/locations/global/fileSearchStores/YOUR_STORE_ID
# Example: projects/123456789/locations/global/fileSearchStores/abc123def456
REACT_APP_FILE_SEARCH_STORE_NAME=

# OpenWeatherMap API (for weather display in Veer chatbot)
# Get API key from: https://openweathermap.org/api
REACT_APP_OPENWEATHERMAP_API_KEY=